  <header>
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">

          <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>

          <!-- Be sure to leave the brand out there if you want it shown -->
          <a class="brand" href="#"><img src="/images/logo_small.png" alt="Surpris3 - Photobombing"></a>

          <!-- Everything you want hidden at 940px or less, place within here -->
          <div class="nav-collapse collapse">
            <ul class="nav">
              <li class="<% if(page == 'top') { %>active<% } %>;%>"><a href="/top">Top</a></li>
              <li class="divider-vertical"></li>
              <li class="<% if(page == 'challenge') { %>active<% } %>;%>"><a href="/challenge">Challenge</a></li>
              <li class="divider-vertical"></li>
              <li class="<% if(page == 'recent') { %>active<% } %>;%>"><a href="/recent">Recent</a></li>
              <li class="divider-vertical"></li>
            </ul>
            <ul class="nav pull-right">
              <li class="nav_logged_in"><a href="#pb_upload" role="button" data-toggle="modal">Upload</a></li>
              <li class="divider-vertical nav_logged_in"></li>
              <li class="nav_logged_in">
                <img class="profilepic" src="/images/placeholder.jpg">
                <span class="profilename"></span>
                <span class="profilepoints"></span></li>
                <li class="divider_vertical nav_logged_in"></li>
                <li class="nav_logged_in"><a href="javascript:surpris3.logout();">Log Out</a></li>
                <li class="nav_logged_out"><a href="javascript:surpris3.login();">Sign In</a></li>
              </ul>
            </div>

          </div>
        </div>
      </div>
    </header>
    <div role="main" id="main">
      <div class="pb_challenge_week">
        <div class="alert alert-block">
          <h4>Challenge of the Week: <%= challenge.name %></h4>
          <%= challenge.description %>
        </div>
      </div>
      <% for(var i=0; i < photobomb.length; i++){ %>
      <div class="pb_entry pb_<%= photobomb[i]._id %>">
        <div class="pb_picture">
          <img src="<%= photobomb[i].picture %>" class="img-polaroid">
        </div>
        <div class="pb_seperator"></div>
        <div class="pb_information">
          <div class="pb_details">
            <h3 class="pb_name"><%= photobomb[i].name %></h3>
            <% if (photobomb[i].hasOwnProperty("competition") && photobomb[i].competition.hasOwnProperty("name") && photobomb[i].competition.name) { %>
            <div class="category">
              <span class="label label-warning"><%= photobomb[i].competition.name %></span>
            </div>
            <% } %>
            <h5 class="pb_user">
              <a href="http://www.facebook.com/<%= photobomb[i].user.id %>" alt="To Facebook Profile" target="_blank">
                <span class="pb_user_pic"><img src="<%= photobomb[i].user.picture.data.url %>"></span>
                <span class="pb_user_name"><%= photobomb[i].user.name %></span>
              </a>
            </h5>
          </div>
          <div class="pb_vote">
            <div class="pb_vote_up"><a href="javascript:surpris3.vote_up(<%= photobomb[i]._id %>)"><div class="ir pb_bomb_up">UP</div></a></div>
            <div class="pb_vote_count"><%= photobomb[i].votes.length %></div>
            <div class="pb_vote_down"><a href="javascript:surpris3.vote_up(<%= photobomb[i]._id %>)"><div class="ir pb_bomb_down">DOWN</div></a></div>
            <div class="clearfix"></div>
          </div>
        </div>
        <div class="clearfix"></div>
      </div>
      <% } %>
      <div class="change_page">
      <div class="pagination">
        <ul>
          <li class="<% if(page_count == 1) { %>disabled <% } %>"><a href="/challenge/<%= page_count-1 %>">&lt;</a></li>
          <li class="active"><a href="#"><%= page_count %></a></li>
          <li><a href="/challenge/<%= page_count+1 %>">&gt;</a></li>
        </ul>
      </div>
    </div>
    </div>
    <footer>
      <div class="footer_logo">
        <img src="/images/logo_dark_big.png" alt="Surpris3 - Photobombing">
      </div>
      <div class="footer_information">
        <span>developed by Dominik Kundel and Ernesto Rodriguez</span>
      </div>
      <div class="clearfix">
      </footer> 

      <!-- upload photobomb -->
      <div id="pb_upload" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="PhotoBombUpload" aria-hidden="true">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
          <h3 id="PhotoBombUpload">Upload Photobomb</h3>
        </div>
        <div class="modal-body">
          <div id="user_upload_error" class="alert alert-block alert-error" style="display: none;">
            <h4>Not logged in!</h4>
            You must be logged in to upload a picture
          </div>
          <div id="server_error" class="alert alert-block alert-error" style="display: none;">
            <h4>An error occured!</h4>
            Try to upload the picture again!
          </div>
          <form class="form-horizontal">
            <div class="control-group">
              <label class="control-label" for="inputName">Name</label>
              <div class="controls">
                <input type="text" id="inputName" placeholder="Picture Name">
              </div>
            </div>
            <div class="control-group">
              <label class="control-label" for="inputURL">Image URL</label>
              <div class="controls">
                <input type="text" id="inputURL" placeholder="http://...">
              </div>
            </div>
            <div class="control-group">
              <label class="control-label" for="inputCompetition">Part of Competition?</label>
              <div class="controls">
                <input type="checkbox" id="inputCompetition">
              </div>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
          <button class="btn btn-warning">Upload Photobomb</button>
        </div>
      </div>
      <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
      <script>window.jQuery || document.write('<script src="/scripts/vendor/jquery-1.8.2.min.js"><\/script>')</script>
      <script src="/scripts/plugins.js"></script>
      <script src="/bootstrap/js/bootstrap.min.js"></script>
      <script src="/scripts/main.js"></script>

